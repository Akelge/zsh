function prompt_server_setup { 
# Setup PROMPT
if `fancyTerm`; then
    # We are on xterminal
    W="%n@%m:%."
    I="%m:%."
    L="%B@%m %~ %#%b "
    PS1="%{]2;$W%}%{]1;$I%}$L"
    unset W I L

else
    # We are not on xterminal
    PS1="%B%n@%m:%~ %#%b "
fi
}

prompt_server_setup

